#include <stdio.h>
#include <stdio.h>

void read1(int a[], int n){
	int i;
	printf("Enter %d elements : ",n);
	for (i=0; i<n; i++){
		scanf("%d",&a[i]);
	}
}

int linearSearch(int a[], int l, int h, int key){
	if(l>h){
		return -1;
	}
	if (a[l] == key){
		return l;
	}
	return linearSearch(a,l+1,h,key);
}
void main() {
	int a[20], n, pos, key;
	printf("Enter n value : ");
	scanf("%d", &n);
	read1(a, n);
	printf("Enter a key element : ");
	scanf("%d", &key);
	pos = linearSearch(a, 0, n - 1, key);
	if (pos == -1) {
		printf("The key element %d is not found\n", key);
	} else {
		printf("The key element %d is found at position : %d\n", key, pos);
	}
}
